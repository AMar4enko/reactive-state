{
    "compilerOptions": {
        "target": "ES5",
        // "outDir": "dist",
        "sourceMap": true,
        "declaration": true,
        "module": "es2015",
        "moduleResolution": "node",
        "strict": true,
        "importHelpers": false,
        "noUnusedLocals": true,
        "jsx": "react",
        "lib": [ "dom", "es5", "es2015.promise", "es2015.symbol" ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "react/**/*.ts",
        "react/**/*.tsx"
    ],
    "exclude": [
        "test/"
    ]
}
