{
    "compilerOptions": {
        "target": "ES5",
        "sourceMap": true,
        "declaration": true,
        "module": "commonjs",
         // due to a bug in rxjs with TS 2.4.1: https://github.com/ReactiveX/rxjs/issues/2539
        "noStrictGenericChecks": true,
        "strict": true,
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "lib": [ "dom", "es5", "es2015.promise", "es2015.core" ]
    },
    "include": [
        "*.ts"
    ]
}
